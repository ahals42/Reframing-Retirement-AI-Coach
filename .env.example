# ==============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# ==============================================================================

# ------------------------------------------------------------------------------
# OPENAI API CONFIGURATION
# ------------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
# CRITICAL: Rotate this key immediately if exposed in git history
OPENAI_API_KEY="sk-proj-your-actual-openai-api-key-here"

# ------------------------------------------------------------------------------
# QDRANT VECTOR DATABASE CONFIGURATION
# ------------------------------------------------------------------------------
# Local development: http://localhost:6333
# Production: use internal Docker network (http://qdrant:6333)
QDRANT_URL="http://qdrant:6333"

# RECOMMENDED: Set a secure API key for Qdrant in production
# Generate with: openssl rand -hex 32
QDRANT_API_KEY="your-secure-qdrant-api-key-here"

# ------------------------------------------------------------------------------
# API AUTHENTICATION
# ------------------------------------------------------------------------------
# Comma-separated list of valid API keys for accessing your endpoints
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# Example: API_KEYS="key1_abc123,key2_def456,key3_ghi789"
API_KEYS="your-api-key-1,your-api-key-2"

# ------------------------------------------------------------------------------
# CORS CONFIGURATION
# ------------------------------------------------------------------------------
# Comma-separated list of allowed origins for CORS
# Development example: http://localhost:3000,http://127.0.0.1:3000
# Production example: https://yourdomain.com,https://www.yourdomain.com
# For AWS Lightsail: http://YOUR_SERVER_IP,http://localhost:8000
ALLOWED_ORIGINS="http://localhost:8000,http://127.0.0.1:8000"

# ------------------------------------------------------------------------------
# RATE LIMITING CONFIGURATION
# ------------------------------------------------------------------------------
# Maximum requests per hour for message endpoints (per API key)
RATE_LIMIT_MESSAGES_PER_HOUR="100"

# Maximum concurrent voice streams (per API key)
RATE_LIMIT_VOICE_CONCURRENT="10"

# Maximum active sessions per API key
MAX_SESSIONS_PER_API_KEY="50"

# ------------------------------------------------------------------------------
# INPUT VALIDATION LIMITS
# ------------------------------------------------------------------------------
# Maximum text message length (characters)
MAX_MESSAGE_LENGTH="10000"

# Maximum audio file size (bytes) - default 10MB
MAX_AUDIO_SIZE_MB="10"

# Maximum conversation history messages per session
MAX_HISTORY_MESSAGES="100"

# ------------------------------------------------------------------------------
# SESSION MANAGEMENT
# ------------------------------------------------------------------------------
# Session TTL in minutes (default: 90)
SESSION_TTL_MINUTES="90"

# ------------------------------------------------------------------------------
# SECURITY SETTINGS
# ------------------------------------------------------------------------------
# Enable HTTPS redirect in production (true/false)
FORCE_HTTPS="false"

# Enable structured JSON logging (true/false)
ENABLE_JSON_LOGGING="true"

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"
